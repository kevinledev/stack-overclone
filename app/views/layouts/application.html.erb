<!DOCTYPE html>
<html>
  <head>
    <title>Stackoverclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.loginLogo = "<%= image_url("login_transparent.png") %>"
      window.logoTransparent = "<%= image_url("logo_transparent.svg") %>"
      window.searchIcon = "<%= image_url("magnifying-glass-solid.svg")%>"
      window.qBubble = "<%= image_url("qBubbleBlack.png")%>"
      window.voteIcon = "<%= image_url("voteIcon.png")%>"
      window.tagIcon = "<%= image_url("tagIcon.png")%>"
      window.trophyIcon = "<%= image_url("trophyIcon.png")%>"
      window.globe = "<%= image_url("icons8-planet-20.png")%>"
      window.teamsfree = "<%= image_url("teamsfree.svg")%>"
      window.homepageSearch = "<%= image_url("home-page-search-50.png")%>"
    </script>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&family=Source+Sans+Pro:wght@200;300;400;600;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
